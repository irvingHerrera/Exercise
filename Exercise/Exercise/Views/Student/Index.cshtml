@model IEnumerable<Exercise.Models.StudentView>

@{
    ViewBag.Title = "Lista de estudiantes";
}

<h2>Estudiantes</h2>

<p>
    @Html.ActionLink("Crear estudiante", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {  id=item.StudentId }) |
            @Html.ActionLink("Detalles", "Details", new {  id=item.StudentId }) |
            @Html.ActionLink("Eliminar", "Delete", new {  id=item.StudentId })
        </td>
    </tr>
}

</table>
